@keyframes area-glow
  0%
    box-shadow 1px 1px 80px 0px rgba(70, 102, 255, .4)

  50%
    box-shadow 1px 1px 108px 0px rgba(70, 102, 255, .7)
  
  100%
    box-shadow 1px 1px 80px 0px rgba(70, 102, 255, .4)


@keyframes blik-button
  0%
    color #fff
    text-shadow 1px 1px 1px #000
  
  50%
    color rgba(70, 102, 255, .4)
    text-shadow 1px 1px 1px yellow
  
  100%
    color #fff
    text-shadow 1px 1px 1px #000

@keyframes text-flicker
  0%
    text-shadow 4px 4px 107px rgba(70, 80, 255, .8)
  
  50%
    text-shadow 10px 10px 207px rgba(70, 80, 255, 1)
  
  100%
    text-shadow 4px 4px 107px rgba(70, 80, 255, .8)
